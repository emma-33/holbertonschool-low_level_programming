#include "main.h"

/**
 * print_square - prints a square, followed by a new line
 * @size: size of the square
 */
void print_square(int size)
{
	if (size <= 0)
	{
		_putchar('\n');
	}
	else
	{
		int x = 0;
		int y = 0;

		while (x < size)
		{
			while (y < size)
			{
				_putchar('#');
				y++;
			}
			x++;
			_putchar('\n');
			
		}

	}
}
